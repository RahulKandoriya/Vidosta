<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kandoriyatech.apps.latestvideostatus.vidosta.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_videoDetailsFragment"
            app:destination="@id/videoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.kandoriyatech.apps.latestvideostatus.vidosta.fragments.SavedFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_saved" >
        <action
            android:id="@+id/action_notificationFragment_to_videoDetailsFragment"
            app:destination="@id/videoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.kandoriyatech.apps.latestvideostatus.vidosta.fragments.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_videoDetailsFragment"
            app:destination="@id/videoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.kandoriyatech.apps.latestvideostatus.vidosta.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_videoDetailsFragment"
            app:destination="@id/videoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoPostFragment"
        android:name="com.kandoriyatech.apps.latestvideostatus.vidosta.fragments.VideoPostFragment"
        android:label="Add Video"
        tools:layout="@layout/fragment_video_post" />
    <fragment
        android:id="@+id/videoDetailsFragment"
        android:name="com.kandoriyatech.apps.latestvideostatus.vidosta.fragments.VideoDetailsFragment"
        android:label="Video Details"
        tools:layout="@layout/fragment_video_details" />
</navigation>